{
  "name": "endless-yt",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "VITE_PARENT_ORIGIN=\"https://endless.thick.stream\" CLOUDFLARE_ENV=production vite build",
    "deploy": "npm run build && wrangler deploy --env production",
    "dev": "VITE_PARENT_ORIGIN=\"http://localhost:5180\" vite dev --port 5181 --strictPort",
    "preview": "npm run build && vite preview",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --max-warnings 0 . && prettier --check \"**/*.{css,html,json,jsonc,js,jsx,mjs,cjs,ts,tsx}\"",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write \"**/*.{css,html,json,jsonc,js,jsx,mjs,cjs,ts,tsx}\""
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.25.0",
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.13",
    "@types/youtube": "^0.1.2",
    "@typescript/lib-dom": "npm:@types/web@^0.0.327",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "wrangler": "^4.63.0"
  }
}
